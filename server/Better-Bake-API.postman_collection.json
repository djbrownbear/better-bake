              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@aaronandanita.com\",\n  \"password\": \"Password123!\",\n  \"name\": \"Test User\",\n  \"avatarURL\": \"https://api.dicebear.com/7.x/avataaars/svg?seed=test\"\n}"
